<div id="stock-show">
  <div class="fluid-container">
      <div class="row">
        <div id="stock-details" class="col-xs-4">
          <h3>Stock Details</h3>
          <div id="stock-info">
            <p>
              <strong>Symbol: </strong>
              <%= @stock.symbol %>
            </p>

            <p>
              <strong>Name: </strong>
              <%= @stock.name %>
            </p>

            <p>
            <strong>Industry: </strong>
             <%= @stock.industry %>
            </p>
            <table>
              <thead>
                <tr>
                  <th>Score</th>
                  <th>PE</th>
                  <th>PB</th>
                  <th>PS</th>
                  <th>Dividend</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= number_with_precision(@stock.rank, precision: 2) %></td>
                  <td><%= number_with_precision(@stock.pe, precision: 2) %></td>
                  <td><%= number_with_precision(@stock.pb, precision: 2) %></td>
                  <td><%= number_with_precision(@stock.ps, precision: 2) %></td>
                  <td><%= number_with_precision(@stock.div, precision: 2) %></td>
                </tr>
              </tbody>
            </table>

            Last Close: <%= @data.date %>
            <table>
              <thead>
                <tr>
                  <th>Close</th>
                  <th>High</th>
                  <th>Low</th>
                  <th>Volume</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= number_with_precision(@data.close, precision: 2) %></td>
                  <td><%= number_with_precision(@data.high, precision: 2) %></td>
                  <td><%= number_with_precision(@data.low, precision: 2) %></td>
                  <td><%= number_with_precision(@data.volume, precision: 0, delimiter: ",") %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        

        <div id="stock-rank" class="col-xs-4">
          <h3>6 Month Price History</h3>
          <div id="price-history">
            
            <table>
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Close</th>
                  <th>Volume</th>
                </tr>
              </thead>
              <tbody>
                <% @price_history.each do |price| %>
                  <tr>
                    <td><%= price.date %></td>
                    <td><%= number_with_precision(price.close, precision: 2)%></td>
                    <td><%= number_with_precision(price.volume, precision: 0, delimiter: ",") %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

        <div id="stock-rank" class="col-xs-4">
          <h3>Latest News</h3>
          <div id="news">
              <%#= @body["articles"] %>
              <% @body["articles"].each do |article| %>
              <li><%= link_to "#{article["title"]} (#{article["source"]["name"]})", article["url"] %></li>
              <% end %>
          </div>
        </div>


      </div>
    </div>
  </div>

  

  <%= link_to 'Back', stocks_path %>
</div>